<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zacharee1.systemuituner">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.DUMP" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DARK">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoRoot"
            android:label="@string/title_activity_no_root">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zacharee1.systemuituner.SetupActivity" />
        </activity>
        <activity
            android:name=".RootActivity"
            android:label="@string/title_activity_root"
            android:parentActivityName=".SetupActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zacharee1.systemuituner.SetupActivity" />
        </activity>
        <activity
            android:name=".SetupActivity"
            android:label="Setup">
            <!--<meta-data-->
                <!--android:name="android.support.PARENT_ACTIVITY"-->
                <!--android:value="com.zacharee1.systemuituner.MainActivity" />-->
        </activity>
    </application>

</manifest>